package legato;

public class Count
{

	    static int i,c=0,res;
	    
	    static int charcount(String s)
	    {
	        for(i=0,c=0;i<s.length();i++)
	        {
	            char ch=s.charAt(i);
	            if(ch!=' ')
	            c++;
	        }
	        return c;
	    }
	    
	    public static void main (String args[])
	    {
	        res=Count.charcount("    ");
	        
	        System.out.println("The number of characters :  "+res);
	    }
	}


